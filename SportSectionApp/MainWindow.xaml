<Window x:Class="SportSectionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Спортивная секция" Height="650" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FFFFE0" Padding="10">
            <StackPanel>
                <TextBlock Text="Спортивная секция" 
                          Foreground="black" 
                          FontSize="24" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Вкладка управления участниками -->
            <TabItem Header="Участники">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="btnRemoveMember" Content="Удалить" Width="100" Margin="5" Click="btnRemoveMember_Click"/>
                        <Button x:Name="btnSave" Content="Сохранить" Width="100" Margin="5" Click="btnSave_Click"/>
                        <Button x:Name="btnLoad" Content="Загрузить" Width="100" Margin="5" Click="btnLoad_Click"/>
                    </StackPanel>

                    <!-- Список участников -->
                    <DataGrid x:Name="dgMembers" Grid.Row="1" AutoGenerateColumns="False" 
                             CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка посещаемости -->
            <TabItem Header="Посещаемость">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Выбор участника -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Участник:" VerticalAlignment="Center" Margin="5,0"/>
                        <ComboBox x:Name="cmbMemberForAttendance" DisplayMemberPath="FullName" Width="300" Margin="5"/>
                        <DatePicker x:Name="dpAttendanceDate" Width="150" Margin="5"/>
                        <Button x:Name="btnMarkAttendance" Content="Отметить посещение" 
                                Margin="5" Click="btnMarkAttendance_Click"/>
                    </StackPanel>

                    <!-- Статистика -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock x:Name="txtAttendanceStats" FontWeight="Bold" Margin="5"/>
                    </StackPanel>

                    <!-- Журнал посещаемости -->
                    <DataGrid x:Name="dgAttendance" Grid.Row="2" AutoGenerateColumns="False" 
                             CanUserAddRows="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding MemberName}" Width="*"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=d}" Width="150"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Тренеры -->
            <TabItem Header="Тренеры">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления тренерами -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="btnAddCoach" Content="Добавить тренера" Width="120" Margin="5" Click="btnAddCoach_Click"/>
                        <Button x:Name="btnRemoveCoach" Content="Удалить тренера" Width="120" Margin="5" Click="btnRemoveCoach_Click"/>
                        <Button x:Name="btnEditCoach" Content="Редактировать" Width="100" Margin="5" Click="btnEditCoach_Click"/>
                    </StackPanel>

                    <!-- Список тренеров -->
                    <DataGrid x:Name="dgCoaches" Grid.Row="1" AutoGenerateColumns="False" 
                             CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Специализация" Binding="{Binding Specialization}" Width="200"/>
                            <DataGridTextColumn Header="Стаж (лет)" Binding="{Binding Experience}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Расписание -->
            <TabItem Header="Расписание">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель создания расписания -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="День:" VerticalAlignment="Center" Margin="5,0"/>
                        <ComboBox x:Name="cmbDayOfWeek" Width="120" Margin="5">
                            <ComboBoxItem Content="Понедельник"/>
                            <ComboBoxItem Content="Вторник"/>
                            <ComboBoxItem Content="Среда"/>
                            <ComboBoxItem Content="Четверг"/>
                            <ComboBoxItem Content="Пятница"/>
                            <ComboBoxItem Content="Суббота"/>
                            <ComboBoxItem Content="Воскресенье"/>
                        </ComboBox>
                        <TextBlock Text="Время:" VerticalAlignment="Center" Margin="5,0"/>
                        <TextBox x:Name="txtTime" Width="80" Margin="5" Text="18:00"/>
                        <TextBlock Text="Тренер:" VerticalAlignment="Center" Margin="5,0"/>
                        <ComboBox x:Name="cmbCoachForSchedule" DisplayMemberPath="FullName" Width="200" Margin="5"/>
                        <TextBlock Text="Группа:" VerticalAlignment="Center" Margin="5,0"/>
                        <TextBox x:Name="txtGroup" Width="100" Margin="5"/>
                        <Button x:Name="btnAddSchedule" Content="Добавить в расписание" 
                                Margin="5" Click="btnAddSchedule_Click"/>
                    </StackPanel>

                    <!-- Фильтры расписания -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Показать:" VerticalAlignment="Center" Margin="5,0"/>
                        <Button x:Name="btnShowAllSchedule" Content="Все" Width="80" Margin="5" Click="btnShowAllSchedule_Click"/>
                        <Button x:Name="btnShowTodaySchedule" Content="Сегодня" Width="80" Margin="5" Click="btnShowTodaySchedule_Click"/>
                        <Button x:Name="btnShowByCoach" Content="По тренеру" Width="100" Margin="5" Click="btnShowByCoach_Click"/>
                        <ComboBox x:Name="cmbFilterCoach" DisplayMemberPath="FullName" Width="200" Margin="5"/>
                    </StackPanel>

                    <!-- Таблица расписания -->
                    <DataGrid x:Name="dgSchedule" Grid.Row="2" AutoGenerateColumns="False" 
                             CanUserAddRows="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="День недели" Binding="{Binding DayOfWeek}" Width="120"/>
                            <DataGridTextColumn Header="Время" Binding="{Binding Time}" Width="80"/>
                            <DataGridTextColumn Header="Тренер" Binding="{Binding CoachName}" Width="*"/>
                            <DataGridTextColumn Header="Группа" Binding="{Binding GroupName}" Width="150"/>
                            <DataGridTextColumn Header="Продолж." Binding="{Binding Duration}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка добавления нового участника -->
            <TabItem Header="Добавить участника">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поля ввода -->
                    <TextBlock Text="ФИО:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtFullName" Grid.Row="0" Grid.Column="1" Margin="5" Height="25"/>

                    <TextBlock Text="Телефон:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtPhone" Grid.Row="1" Grid.Column="1" Margin="5" Height="25"/>

                    <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Grid.Row="2" Grid.Column="1" Margin="5" Height="25"/>

                    <!-- Кнопка добавления -->
                    <Button x:Name="btnAddNewMember" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                           Content="Добавить участника" Width="150" Margin="5" 
                           HorizontalAlignment="Left" Click="btnAddNewMember_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>